<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal">

		<EditText android:layout_width="fill_parent"
			android:maxLines="1" android:singleLine="true"
			android:layout_gravity="left" android:layout_weight="1"
			android:layout_height="wrap_content" />

		<ImageButton android:layout_width="120dip"
			android:layout_gravity="right" android:layout_weight="1"
			android:src="@drawable/search" android:layout_height="wrap_content" />

	</LinearLayout>
</LinearLayout>